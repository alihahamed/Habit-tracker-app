<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile</title>
    <link rel="stylesheet" href="/profile.css">
    <link rel="manifest" href="/manifest.json">

</head>
<body>
    <div class="app-container" id="profile-container">
        <!-- Header Section -->
        <header class="header">
            <h1 class="app-title">Profile</h1>
        </header>

        <!-- User Profile Section -->
        <div class="user-profile">
            <div class="profile-avatar" >
                <img src="/icons/ghost.png" alt="profile">
            </div>
            <h2 class="username" id="username"></h2>
            <p class="join-date" >Member since, <span class="date" id="join-date"></span></p> 
        </div>

        <!-- Large Progress Ring -->
        <div class="large-progress-container">
            <div class="large-progress-ring" style="--percent:">
                <svg>
                    <circle class="large-ring-bg" cx="80" cy="80" r="75" />
                    <circle class="large-ring-progress" cx="80" cy="80" r="75" />
                </svg>
                <div class="progress-content">
                    <span class="progress-value"></span>
                    <span class="progress-label">Completion Rate</span>
                </div>
            </div>
        </div>

        <!-- Card Container -->
        <div class="card-container">
            <!-- Stats Card -->
            <div class="stats-card">
                <div class="stats-grid">
                    <div class="stat-item current-streak">
                        <span class="stat-icon"><img src="/icons/fire.png" alt="streak" class="fire-icon"></span>
                        <span class="stat-value" id="current-streak"></span>
                        <span class="stat-label">Current Streak</span>
                    </div>
                    <div class="stat-item longest-streak">
                        <span class="stat-icon"><img src="/icons/medal.png" alt="longest streak"></span>
                        <span class="stat-value" id="longest-streak"></span>
                        <span class="stat-label">Longest Streak</span>
                    </div>
                    <div class="stat-item total-completed">
                        <span class="stat-icon"><img src="/icons/thumbs-up.png" class="thumbs-icon" alt="done"></span>
                        <span class="stat-value" id="total-completed"></span>
                        <span class="stat-label">Total Completed</span>
                    </div>
                    <div class="stat-item total-habits">
                        <span class="stat-icon"><img src="/icons/eye.png" class="eye-icon" alt="total"></span>
                        <span class="stat-value" id="total-habits"></span>
                        <span class="stat-label">Total Habits</span>
                    </div>
                </div>

                <!-- Action Buttons -->

                <div class="action-buttons">
                    <button class="action-btn logout-btn" id="logoutBtn">
                        <svg class="btn-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"/>
                            <polyline points="16,17 21,12 16,7"/>
                            <line x1="21" y1="12" x2="9" y2="12"/>
                        </svg>
                        <span class="btn-text">Edit profile</span>
                    </button>
                </div>

                <div class="action-buttons">
                    <button class="action-btn logout-btn" id="logoutBtn">
                        <svg class="btn-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"/>
                            <polyline points="16,17 21,12 16,7"/>
                            <line x1="21" y1="12" x2="9" y2="12"/>
                        </svg>
                        <span class="btn-text">Logout</span>
                    </button>
                </div>
            </div>
        </div>

        <!-- Bottom Navigation -->
        <nav class="bottom-nav">
            <div class="nav-container">
                <a href="/" class="nav-item">
                    <div class="nav-icon">üè†</div>
                    <span class="nav-label">Home</span>
                </a>
                <a href="/habits" class="nav-item">
                    <div class="nav-icon">üìã</div>
                    <span class="nav-label">Habits</span>
                </a>
                <a href="/history" class="nav-item">
                    <div class="nav-icon">üìÖ</div>
                    <span class="nav-label">History</span>
                </a>
                <a href="/profile" class="nav-item active">
                    <div class="nav-icon">‚öôÔ∏è</div>
                    <span class="nav-label">Profile</span>
                </a>
            </div>
        </nav>
    </div>
    <script src="/script.js" defer></script>

</body>
</html>
